rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(ownerUid) {
      return signedIn() && ownerUid == request.auth.uid;
    }

    // ---------------------------
    // Global app content (read-only)
    // ---------------------------
    match /stories/{doc=**} {
      allow read: if true;
      allow write: if false;
    }

    match /adventure_templates/{doc=**} {
      allow read: if true;
      allow write: if false;
    }

    match /coloring_pages/{doc=**} {
      allow read: if true;
      allow write: if false;
    }

    // ---------------------------
    // User-private app data
    // ---------------------------
    match /users/{uid} {
      allow read, write: if signedIn() && uid == request.auth.uid;
    }

    match /users/{uid}/settings/{docId} {
      allow read, write: if signedIn() && uid == request.auth.uid;
    }

    match /users/{uid}/progress/{docId} {
      allow read, write: if signedIn() && uid == request.auth.uid;
    }

    match /users/{uid}/personalized_audio/{docId} {
      // Client reads personalized narration metadata/paths.
      // Writes are handled by trusted backend (Admin SDK).
      allow read: if signedIn() && uid == request.auth.uid;
      allow write: if false;
    }

    match /users/{uid}/rate_limits/{docId} {
      // Rate limits are backend-owned.
      allow read: if signedIn() && uid == request.auth.uid;
      allow write: if false;
    }

    // Legacy/other project collections kept owner-scoped.
    match /workers/{workerId} {
      allow read: if signedIn() && isOwner(resource.data.ownerUid);
      allow create: if signedIn() && isOwner(request.resource.data.ownerUid);
      allow update, delete: if signedIn() && isOwner(resource.data.ownerUid);
    }

    match /pipelines/{pipelineId} {
      allow read: if signedIn() && isOwner(resource.data.ownerUid);
      allow create: if signedIn() && isOwner(request.resource.data.ownerUid);
      allow update, delete: if signedIn() && isOwner(resource.data.ownerUid);
    }

    match /jobs/{jobId} {
      allow read: if signedIn() && isOwner(resource.data.ownerUid);
      allow create: if signedIn() && isOwner(request.resource.data.ownerUid);
      allow update, delete: if signedIn() && isOwner(resource.data.ownerUid);

      match /events/{eventId} {
        allow read: if signedIn() && isOwner(get(/databases/$(database)/documents/jobs/$(jobId)).data.ownerUid);
        allow write: if signedIn() && isOwner(get(/databases/$(database)/documents/jobs/$(jobId)).data.ownerUid);
      }

      match /approvals/{approvalId} {
        allow read, write: if signedIn() && isOwner(get(/databases/$(database)/documents/jobs/$(jobId)).data.ownerUid);
      }
    }

    // Explicitly deny everything else.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
